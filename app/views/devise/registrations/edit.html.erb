<div class="was-validated">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<br><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
 
  <div class="form-group">
    <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", required: true %>
  </div>

   <div class="form-group">
    <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email", required: true %>
  </div>

   <div class="form-group">
    <%= f.text_field :telephone, class: "form-control", placeholder: "Phone Number", required: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :company, class: "form-control", placeholder: "Company", required: true %>
  </div>

 <% # Adicionar esse campo quando criar profile - realtor  %>
  <div class="form-group">
    <%= f.text_area :details, class: "form-control", placeholder: "Details", required: true %>
  </div>
   </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<br/><br/>

Change password ( <% if @minimum_password_length %>
    <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>):

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password (leave blank if you don't want to change it)" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password Confirmation" %>
  </div>
  <div class="was-validated">
  <div class="form-group">
  <br/><br/>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Current Password (we need your current password to confirm your changes)", required: true  %>
  </div>


   <div class="form-group">
    <%= f.label :image1 %>
    <%= f.file_field :image1, class: "form-control", required: true %>
   </div>

   <div class="form-group">
    <%= f.label :coverimg %>
    <%= f.file_field :coverimg, class: "form-control", required: true %>
   </div>

  <div class="form-group">
    <%= f.submit "Update", class: "btn btn-success", required: true %>
  </div>
<% end %>

<br/><br/>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<br/><br/>

</div>
</div>