<div class="was-validated">
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>


    <div class="form-group">
    <%= f.input_field :title, class: "form-control", placeholder: "Title", required: true  %>
  </div>
    <div class="form-group">
    <%= f.input_field :url, class: "form-control", placeholder: "Url", required: true  %>
  </div>
    <div class="form-group">
    <%= f.input_field :summary, class: "form-control", placeholder: "Summary", required: true  %>
  </div>
    <div class="form-group">
    <textarea <%= f.input_field :body , class:"form-control", placeholder: "Body", required: true  %> </textarea>
  </div>
  <br><br>
  
    <%= f.file_field :image2, class: "form-control", required: true %>
    
    <%= f.input :active %>
  

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
</div>