
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="form-group">
    <%= f.input_field :title, class: "form-control", placeholder: "Title" %>
  </div>
    <div class="form-group">
    <%= f.input_field :url, class: "form-control", placeholder: "Url" %>
  </div>
    <div class="form-group">
    <%= f.input_field :summary, class: "form-control", placeholder: "Summary" %>
  </div>
    <div class="form-group">
    <textarea <%= f.input_field :body , class:"form-control", placeholder: "Body" %> </textarea>
  </div>
  <br><br>
 
    <%= f.file_field :image2 %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
