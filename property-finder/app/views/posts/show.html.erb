<main role="main" class="main-banner" id = "news-banner">
  <div class="jumbotron">
    <div class="container">  
     <br/><br/><br/><br/><br/>
    </div>
  </div>
</main>
<div class="container">
<div class>
<p class="text-muted pl-2"><em>Posted <%= time_ago_in_words @post.created_at %></em></p>
  <h2><%= @post.title %></h2>
  <%= image_tag @post.image2.url (:medium) %>
     <br/><br/><br/>
  <%= simple_format @post.body %>
     <br/><br/>
  <a href= <%= @post.url %> ><%= @post.url %></a>
     <br/><br/><br/>
<%= link_to "View latest blog posts", blog_path, class: "btn btn-success" %>
     <br/><br/><br/><br/>
</div>
</div>





